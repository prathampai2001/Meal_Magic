<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JuiceBottel">

<!--    Nav bar-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navbar"
        android:layout_width="395dp"
        android:layout_height="46dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007">

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="259dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="back button"
            android:src="@drawable/arrow_left2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="319dp"
            android:layout_height="25dp"
            android:layout_marginStart="48dp"
            android:text="Details"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Food Image continer-->


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImage"
        android:layout_width="350dp"
        android:layout_height="296dp"

        app:layout_constraintBottom_toTopOf="@+id/cardView3details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="35dp"
        app:layout_constraintTop_toTopOf="@+id/navbar">

        <RelativeLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="350dp"
            android:layout_height="296dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/ghost">


            <ImageView
                android:layout_width="258dp"
                android:layout_height="215dp"

                android:layout_centerInParent="true"
                android:layout_marginStart="115dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/cup" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3details"
        android:layout_width="364dp"
        android:layout_height="97dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="14dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="364dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/ghost"
            android:foregroundTint="@color/black"
            android:paddingLeft="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/clock"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:text="15min" />

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Delivery" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/message_icon"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:text="32+" />

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Review" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="20dp"
                    android:src="@drawable/star"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:text="4.2" />

                <TextView
                    android:layout_width="84dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="Rating" />

            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!--    Block 3 food name add ,deduct food ordered-->

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3details"
        app:layout_constraintVertical_bias="0.083">


        <TextView
            android:id="@+id/txtfoodname"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:gravity="top"
            android:lineSpacingExtra="-5sp"
            android:text="Blond Toast"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtprice"
            android:layout_width="60dp"
            android:layout_height="33dp"
            android:layout_below="@id/txtfoodname"
            android:text="$12.3"
            android:textSize="17sp"
            android:textColor="@color/bgColor" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtfoodname">


            <Button
                android:id="@+id/btsub"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ghost"
                android:text="-"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnadd"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="1" />

            <Button
                android:id="@+id/btnadd"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ghost"
                android:text="+"
                android:textColor="@color/black" />

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="376dp"
        android:layout_height="95dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.128">

        <Button
            android:layout_width="31dp"
            android:layout_height="84dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/ghost"
            android:drawableTop="@drawable/paper_cup_border"
            android:text="Small"

            android:textColor="@color/black" />

        <Button
            android:layout_width="31dp"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/ghost"
            android:drawableTop="@drawable/paper_cup_border"
            android:text="Medium"

            android:textColor="@color/black" />

        <Button
            android:layout_width="115dp"
            android:layout_height="88dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/ghost"
            android:drawableTop="@drawable/paper_cup_large"
            android:text="Large"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:layout_width="450dp"
        android:layout_height="81dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-7dp"
        android:backgroundTint="@color/bgColor"
        android:text="Add to cart"
        android:textSize="17sp"
        android:drawableTop="@drawable/bag"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0" />



</androidx.constraintlayout.widget.ConstraintLayout>