<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="368dp"
        android:layout_height="155dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052"
        app:cardCornerRadius="24dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="8dp">


    <RelativeLayout
        android:id="@+id/itemCard"
        android:layout_width="368dp"
        android:layout_height="155dp"
        android:background="@color/white"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052">

        <androidx.cardview.widget.CardView

            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="240dp"
            android:layout_marginBottom="587dp"
            android:backgroundTint="@color/ghost"
            android:paddingLeft="15dp"
            android:paddingTop="30dp"
            android:paddingBottom="23dp"
            app:cardCornerRadius="25dp">

            <ImageView
                android:id="@+id/imageFood"
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp"
                android:src="@drawable/burger" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtfoodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="16dp"
            android:text="Cheese Burger"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtfoodDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="45dp"
            android:text="Delicious burger with cheese and veggies." />

        <TextView
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/rupee_icon"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtfoodPrice"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:layout_marginLeft="173dp"
            android:layout_marginTop="85dp"
            android:text="156.3"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="37dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="61dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:src="@drawable/filled_star"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="22dp"
                android:layout_weight="1"
                android:text="4.2" />
        </LinearLayout>


        <TextView
            android:id="@+id/txtDeliveryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="115dp"
            android:text="Delivery in 30 mins"
            android:textSize="14sp" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
